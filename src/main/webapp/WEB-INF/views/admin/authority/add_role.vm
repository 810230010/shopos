<script src="/assets/admin/js/plugins/iCheck/icheck.min.js"></script>
<script>

    $("#权限管理").addClass("active");
    $("#管理员列表").addClass("active");
    $('#side-menu').metisMenu();

    var rank = 1;

    $(document).ready(function () {
        //复选框的配置
        $('.i-checks').iCheck({
            checkboxClass: 'icheckbox_square-green',
            radioClass: 'iradio_square-green',
        });
       //复选框全选和全不选
        for( var i=1; i<=10;i++){
            $("."+i).on('ifChanged', function (event) {
            if ($('.'+i).is(':checked') == true) {//这里就可以判断当前是否被选择了
                $("."+i+"02").iCheck('check');//如果已选择，可以用iCheck取消选择
            } else {
                $("."+i+"02").iCheck('uncheck');//如果没选择，可以用iCheck美化选择
            }
        });

        }
//
    });
</script>

