#parse("/admin/models/begin.vm")

<link href="/assets/admin/css/plugins/dataTables/datatables.min.css" rel="stylesheet">
<link href="/assets/admin/css/plugins/touchspin/jquery.bootstrap-touchspin.min.css" rel="stylesheet">
#parse("/admin/models/header.vm")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>权限管理-管理员列表</h2>
        <p>
            <a type="button" class="btn btn-w-m btn-primary" href="/admin/authority/addAdminPage">添加管理员</a>
        </p>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5 id="rank">管理员列表</h5>
                    <a id="back" hidden="hidden"> <i class="fa fa-reply" style="color: #777777"></i></a>
                </div>
                <div class="ibox-content">
                    <div class="table-responsive">
                        <table id="brandTable" class="table table-striped table-bordered table-hover dataTables-example" >
                            <thead>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
#parse("/admin/models/footer.vm")

<script src="/assets/admin/js/plugins/dataTables/datatables.min.js"></script>
<script>

    $("#权限管理").addClass("active");
    $("#管理员列表").addClass("active");
    $('#side-menu').metisMenu();

    var rank = 1;

    $(document).ready(function () {
        var t = $('#brandTable').DataTable({
            "ajax": {
                'url': '/admin/authority/searchAdminList',
                "data": function(d) {
                    var param = {};
                    param.page = d.start/d.length + 1;
                    param.pageSize = d.length;
                    param.draw = d.draw;
                    param.orderColumn = d.columns[d.order[0]['column']]['data'];
                    param.orderType = d.order[0]['dir'];
                    param.searchKey = d.search["value"];
                    return param;
                },
            },
            "columns": [
                {"data":"adminId","width":"7%","title":"管理员序号","visible": false},
                {"data":"username","width": "10%","title":"用户名","orderable": false},
                {"data":"adminRole","width": "10%","title":"角色","orderable": false},
                {"data":"email","width": "10%","title":"Email地址","orderable": false},
                {"data":"createTime","width": "10%","title":"创建时间","orderable": false},
                {"data":"loginNum","width": "5%","title":"登录次数","orderable": true},
                {"data":"loginTime","width": "10%","title":"最后登入时间","orderable": false},
                {
                    "data":"adminId",
                    "width": "20%",
                    "title":"操作",
                    "orderable": false,
                    "render": function (data, type, row) {
                        return [
                            '<a class="table-button btn btn-info btn-xs table-action edit" href="javascript:void(0)">',
                            '查看日志 <i class="fa fa-eye"></i>',
                            '</a>',
                            '<a class="table-button btn btn-primary btn-xs table-action edit" href="javascript:void(0)" style="margin-left:10px">',
                            '编辑 <i class="fa fa-edit"></i>',
                            '</a>',
                            '<a class="table-button btn btn-danger btn-xs table-action edit" href="javascript:void(0)" style="margin-left: 10px;">',
                            '移除 <i class="fa fa-trash-o"></i>',
                            '</a>',
                        ].join('');
                    }},
            ],
            "searching": true,
            "ordering":true,
            "serverSide": true,
            "deferRender": true,
            "processing": true,
            "autoWidth": false,
            "lengthMenu": [ 10, 15, 20 ],
            "responsive": true,
            "dom": '<"html5buttons"B>lTfgitp',
            "buttons": [
                {extend: 'copy'},
                {extend: 'csv'},
                {extend: 'excel', title: 'ExampleFile'},
                {extend: 'pdf', title: 'ExampleFile'},

                {extend: 'print',
                    customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ],
            "language": {
                "url": "/assets/admin/js/plugins/dataTables/Chinese.json",
            },
            "fnDrawCallback" : function(){
                this.api().column(0).nodes().each(function(cell, i) {
                    cell.innerHTML =  i + 1;
                });
            },
        });
        var table = $('#brandTable').DataTable();

        //编辑
        table.on( 'click', '.edit', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            window.location.href = "/admin/authority/editAdminPage?adminId="+data.adminId;
        });

        //删除一条记录
        table.on('click', '.delete', function() {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            layer.confirm('确定删除改品牌?!', {icon: 5,btnAlign:'c',title:'提示'}, function(index){
                //do something
                $.ajax({
                    url: "/admin/brand/deleteBrand",
                    type: "get",
                    data: {"brandId": data.brandId},
                    success:function(result) {
                        if (result.code == 200) {
                            layer.open({
                                title: '提示'
                                ,content: '删除成功!!'
                            })
                            window.location.reload();
                        }
                    },
                    error:function(result) {
                        alert("系统出错!")
                    }
                });
                layer.close(index);
            });


        });

        table.on( 'click', '.getsub', function () {
            rank = rank +1;
            if (rank > 1){
                $('#back').show();
            }else{
                $('#back').hide();
            }
            $('#rank').html("商品分类列表("+rank+"级)")
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();

            goodsCategoryId = data.goodsCategoryId;
            upParentId[rank] = data.goodsCategoryId;
            table = $('#brandTable').DataTable().ajax.reload();
        });

        $("#back").on('click', function () {
            rank = rank - 1;
            if (rank > 1){
                $('#back').show();
            }else{
                $('#back').hide();
            }
            parentId = upParentId[rank];
            $('#rank').html("商品分类列表("+rank+"级)")
            table = $('#brandTable').DataTable().ajax.reload();
        });
    });
</script>

#parse("/admin/models/end.vm")