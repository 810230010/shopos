#parse("/admin/models/header.vm")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>商品-添加商品</h2>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <form id="wizard" action="#" class="wizard-big form-horizontal">
                <h1>选择商品类型</h1>
                <fieldset>
                    <div class="row">
                        <div class="col-lg-4">
                            <p>一级类型</p>
                            <div class="ibox-content category-selete b-r-md">
                                <ul id="category1">
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <p>二级类型</p>
                            <div class="ibox-content category-selete b-r-md">
                                <ul id="category2">
                                </ul>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <p>三级类型</p>
                            <div class="ibox-content category-selete b-r-md">
                                <ul id="category3">
                                </ul>
                            </div>
                        </div>
                    </div>
                </fieldset>
                <h1>通用信息</h1>
                <fieldset>
                    <div class="ibox-content">
                        <h4>通用信息</h4>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品名称:</label>
                                    <div class="col-sm-7">
                                        <input id="name" name="name" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">规格名称(单位):</label>
                                    <div class="col-sm-7">
                                        <input id="unit" name="unit" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品价格:</label>
                                    <div class="col-sm-7">
                                        <input id="price" name="price" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品佣金:</label>
                                    <div class="col-sm-7">
                                        <input id="commission" name="commission" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">运费:</label>
                                    <div class="col-sm-7">
                                        <input id="carriage" name="carriage" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品广告词:</label>
                                    <div class="col-sm-7">
                                        <input id="adWord" name="adWord" type="text" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">品牌:</label>
                                    <div class="col-sm-7">
                                        <select id="" name="" class="brand-select form-control">
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品logo图片:</label>
                                    <div class="col-sm-4">
                                        <input id="goods-logo" class="file" name="file" type="file" multiple>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">商品图片集:</label>
                                    <div class="col-sm-8">
                                        <input id="goods-images" class="file" name="file" type="file" multiple>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </fieldset>

                <h1>图文详情</h1>
                <fieldset>
                    <textarea id="content" style="height:600px;max-height:600px;">
                        <p>请输入内容...</p>
                    </textarea>
                </fieldset>

                <h1>填写商品属性</h1>
                <fieldset>
                    <div class="ibox">
                        <div class="ibox-title">
                            <h5>添加商品属性</small></h5>
                        </div>
                        <div class="ibox-content">
                            <form class="form-horizontal">
                                <div id="sku_content">
                                    <div id="sku_img">
                                        <div class="form-group">
                                            <label class="col-sm-1 control-label">图片属性</label>
                                            <div class="col-sm-2">
                                                <input id="sku_img_name" name="sku_img_name" type="text" class="form-control">
                                            </div>
                                        </div>
                                        <div id="with_img" class="form-group">
                                            <label class="col-sm-1 control-label">属性值</label>
                                            <div class="col-sm-11">
                                                <div id="sku_img_list" class="uploader-list"></div>
                                                <div id="sku_img_picker" class="pull-left"></div>
                                            </div>
                                        </div>
                                        <div class="hr-line-dashed"></div>
                                    </div>
                                    <div id="sku_attribute">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-1">
                                        <div class="btn btn-primary dim" type="button" id="sku-content-add">添加新属性</div>
                                    </div>
                                    <div class="col-sm-1">
                                        <div class="btn btn-primary dim" type="button" id="create_table">生成表格</div>
                                    </div>
                                </div>
                            </form>

                            <div id="createTable">

                            </div>

                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
</div>
