                </div>
            </div>
        </div>
    </div>
</div>
#parse("/admin/models/footer.vm")

<script src="/assets/admin/js/plugins/sweetalert/sweetalert.min.js"></script>
<script src="/assets/admin/js/plugins/dataTables/datatables.min.js"></script>

<script>

    $(document).ready(function () {
        var t = $('#datatables').DataTable({
            "ajax": {
                'url': '/admin/member/adviceList',
                "data": function(d) {
                    var param = {};
                    param.page = d.start/d.length + 1;
                    param.pageSize = d.length;
                    param.draw = d.draw;
                    param.orderColumn = d.columns[d.order[0]['column']]['data'];
                    param.orderType = d.order[0]['dir'];
                    param.searchKey = d.search["value"];
                    return param;
                },
            },
            "columns": [
                {"data":"adviceId","width":"7%","title":"序号","orderable": false},
                {"data":"memberName","width": "10%","title":"会员昵称","orderable": false},
                {
                    "data":"adviceContent",
                    "width": "20%",
                    "title":"评论内容",
                    "orderable": false,
                    "render": function(data, type, row){
                        var advice;
                        if(row.adviceContent.length < 20){
                            advice = row.adviceContent;
                        }else {
                            advice = row.adviceContent.substr(0, 20) + "<font style='color:black;'>...更多</font>";
                        }
                            return [
                                '<a class="btn-xs table-action status" style="outline: none" href="javascript:void(0)">',
                                advice,
                                '</a>',
                            ].join('');

                    }
                },
                {"data":"createTime","width": "10%","title":"评论日期","orderable": true},
                {
                    "data":"status",
                    "width": "5%",
                    "title":"浏览状态",
                    "orderable": false,
                    "render": function(data, type, row){
                        if(row.status == 1) {
                            return "已读";
                        }
                        return "未读";
                    }
                },
                {"data":"adviceId","width": "5%","title":"操作","orderable": false,"render": function(data, type, row){
                    return [
                        '<a class="btn btn-danger btn-xs table-action delete" href="javascript:void(0)">',
                        '删除 <i class="fa fa-times"></i>',
                        '</a>',
                    ].join('');
                }},
            ],
            "searching": true,
            "ordering":true,
            "serverSide": true,
            "deferRender": true,
            "processing": true,
            "autoWidth": false,
            "lengthMenu": [ 10, 15, 20 ],
            "responsive": true,
            "dom": '<"html5buttons"B>lTfgitp',
            "buttons": [
                {extend: 'copy'},
                {extend: 'csv'},
                {extend: 'excel', title: 'ExampleFile'},
                {extend: 'pdf', title: 'ExampleFile'},
                {extend: 'print',
                    customize: function (win){
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                                .addClass('compact')
                                .css('font-size', 'inherit');
                    }
                }
            ],
            "language": {
                "url": "/assets/admin/js/plugins/dataTables/Chinese.json",
            },
            "fnDrawCallback" : function(){
                this.api().column(0).nodes().each(function(cell, i) {
                    cell.innerHTML =  i + 1;
                });
            },
        });
        var table = $('#datatables').DataTable();
        //浏览留言
        table.on( 'click', '.status', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            swal({
                        title: "留言",
                        text: data.adviceContent,
                        type: "info",
//                        showCancelButton: true,
                        confirmButtonColor: "green",
                        confirmButtonText: "朕已阅!",
                        closeOnConfirm: true
                    },
                    function(){
                        if(data.status == 1){
                            return;
                        }
                        $.ajax({
                            url: "/admin/member/updateAdviceStatus",
                            type: "get",
                            data: {"adviceId": data.adviceId, "type":"0"},
                            success:function(result) {
                                if(result.code == 200){
                                    swal("已标记为已读留言!");
                                    setTimeout(function () {
                                        window.location.href = "/admin/member/adviceListPage";
                                    }, 2000);
                                }
                            },
                            error:function(result) {
                                alert("系统出错!")
                            }
                        });
                    });

        });

        //删除留言
        table.on( 'click', '.delete', function () {
            var tr = $(this).closest('tr');
            var data = table.row(tr).data();
            swal({
                        title: "确定删除?",
                        type: "warning",
                        showCancelButton: true,
                        confirmButtonColor: "#DD6B55",
                        confirmButtonText: "确认",
                        closeOnConfirm: true
                    },
                    function(){
                        $.ajax({
                            url: "/admin/member/updateAdviceStatus",
                            type: "get",
                            data: {"adviceId": data.adviceId, "type":"1"},
                            success:function(result) {
                                if(result.code == 200{
                                    swal("删除留言", "已删除该留言", "success");
                                    setTimeout(function () {
                                        window.location.href = "/admin/member/adviceListPage";
                                    }, 2000);
                                }
                            },
                            error:function(result) {
                                alert("系统出错!")
                            }
                        });

                    });

        });
    });
</script>

#parse("/admin/models/end.vm")