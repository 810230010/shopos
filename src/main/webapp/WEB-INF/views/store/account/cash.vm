#parse("/store/models/begin.vm")
<link href="/assets/admin/css/plugins/sweetalert/sweetalert.css" media="all" rel="stylesheet" type="text/css"/>
#parse("/store/models/header.vm")
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>账户-提现申请</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>提现</h5>
                </div>
                <div class="ibox-content">
                    <form id="form" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-3 control-label">可提现金额：</label>
                            <div class="col-lg-7">
                                <label class="control-label" style="color: red">￥300</label>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-3 control-label">提现金额：</label>
                            <div class="col-lg-7">
                                <input type="number" id="amount" name="amount" value="$!{}" required class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-3 col-lg-10">
                                <div class="btn btn-sm btn-primary" id="submit">提交</div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
#parse("/store/models/footer.vm")
<!-- Jquery Validate -->
<script src="/assets/admin/js/plugins/validate/jquery.validate.min.js"></script>
<script src="/assets/admin/js/plugins/sweetalert/sweetalert.min.js" type="text/javascript"></script>

<script>

    // MetisMenu
    $("#文件存储设置").addClass("active");
    $("#设置").addClass("active");
    $('#side-menu').metisMenu();

    $("#form").validate();
    $("#submit").on('click', function () {
        var form = $("#form");
        if(!form.valid()){
            return ;
        }

        $.post("/store/setting/updateAddress",
                {
                    refundAddress: $("#refundAddress").val(),
                    refundName: $('#refundName').val(),
                    refundPhone: $('#refundPhone').val(),
                },
                function (data, status) {
                    if (data.code == 200) {
                        swal({
                            title: "成功!",
                            text: "发货成功!",
                            type: "success",
                            showConfirmButton: false,
                            timer: 2000,
                        });
                    }else{
                        swal({
                            title: "失败!",
                            text: "发货失败!",
                            type: "error",
                            showConfirmButton: false,
                            timer: 2000,
                        });
                    }

                });
    });

</script>

#parse("/store/models/end.vm")