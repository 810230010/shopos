#parse("/store/models/begin.vm")


#parse("/store/models/header.vm")
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="widget style1">
                <div class="row">
                    <div class="col-xs-4 text-center">
                        <i class="fa fa-trophy fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> 今日收入 </span>
                        <h2 id="todayIncome" class="font-bold text-danger">￥ 4,232</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> 今日订单总数 </span>
                        <h2 id="todayOrders" class="font-bold">26</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 lazur-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-comment fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> 今日评论数 </span>
                        <h2 id="todayComments" class="font-bold">260</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="widget style1 yellow-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-eye fa-5x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span> 今日访问量 </span>
                        <h2 id="todayVistors" class="font-bold">12</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- 订单 -->
    <div class="row">
        <div class="col-lg-2">
            <div class="widget style1 bg-warning">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-3x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>未确认订单</span>
                        <h3 id="unsuredOrders" class="font-bold">26</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-3x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>待支付订单</span>
                        <h3 id="waitToPay" class="font-bold">26</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-3x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>待发货订单</span>
                        <h3 id="waitTOsend" class="font-bold">26</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-3x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>已成交订单</span>
                        <h3 id="finished" class="font-bold">26</h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-2">
            <div class="widget style1 red-bg">
                <div class="row">
                    <div class="col-xs-4">
                        <i class="fa fa-book fa-3x"></i>
                    </div>
                    <div class="col-xs-8 text-right">
                        <span>退货申请</span>
                        <h3 id="withdraw" class="font-bold">26</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
#parse("/store/models/footer.vm")


<script>
    $('#side-menu').metisMenu();

    $(document).ready(function() {
        setTimeout(function () {
            toastr.options = {
                closeButton: true,
                progressBar: true,
                showMethod: 'slideDown',
                timeOut: 2500
            };
            toastr.success('欢迎回来!', '感谢使用SHOPOS系统!');
        }, 1300);

        //设置统计数据
        $("#todayIncome").text("￥"+$analysis.todayIncome.get("今日收入"));
        $("#todayOrders").text($analysis.todayOrders.get("今日订单数"));
        $("#todayComments").text($analysis.todayComments.get("今日评论数"));
        $("#unsuredOrders").text($analysis.unsuredOrders.get("未确认订单"));
        $("#waitToPay").text($analysis.waitTOPayOrders.get("待支付订单"));
        $("#waitTOsend").text($analysis.waitToSendOrders.get("待发货"));
        $("#finished").text($analysis.alreadyPayedOrders.get("已成交"));
        $("#withdraw").text($analysis.withdrawGoodsApplyNum.get("退货申请"));
    });
</script>


#parse("/store/models/end.vm")